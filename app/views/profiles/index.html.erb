<style>

  .card {
    height: 175px;
    text-shadow: 0 1px 3px rgba(0,0,0,0.6);
    background-size: cover !important;
    background-position: center;
    color: white;
    position: relative;
    margin: 0 auto;
  }

  .card-username {
    position: absolute;
    bottom: 10px;
    left: 10px;
  }

  .card-description p {
    font-size: 30px;
    opacity: 0.7;
    font-weight: light;
    text-align: center;
  }
  .card-link {
    position: absolute;
    top: 0;
    bottom: 0;
    right: 0;
    width: 100%;
    z-index: 2;
    background: black;
    opacity: 0;
  }

</style>

<div class="form-inputs">
  <%= simple_form_for(f, as: current_user)
  <%= f.input :latitude, as: :hidden %>
  <%= f.input :longitude, as: :hidden %>
</div>
<div class="form-actions">
  <%= f.button :submit, "Update my Geolocation", id: "button_signup_user", class: 'btn btn-primary', disabled: "disabled" %>
</div>

  <div class="row">
          <h2> <% @users.each do |user| %></h2>
          <% if user != current_user %>

    <div class="col-xs-6 col-sm-4 col-md-3">
      <div class="card" style='background-image: url(<%= user.photo ? cl_image_path(user.photo, options = {height: 400, width: 400, crop: :fill, gravity: :face}) : "http" %>)'>

        <div class="card-username">
          <%= "#{user.username}, #{Date.today.year - user.birthdate.year}" if user.birthdate %>
        </div>
        <a class="card-link" href="/profiles/<%= user.id %>" ></a>
      </div>
    </div>
    <% end %>
          <% end %>
  </div>
