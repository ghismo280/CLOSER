<style>

  .card {
    height: 175px;
    text-shadow: 0 1px 3px rgba(0,0,0,0.6);
    background-size: cover !important;
    background-position: center;
    color: white;
    position: relative;
    margin: 0 auto;
  }

  .card-username {
    position: absolute;
    bottom: 10px;
    left: 10px;
  }

  .card-description p {
    font-size: 30px;
    opacity: 0.7;
    font-weight: light;
    text-align: center;
  }
  .card-link {
    position: absolute;
    top: 0;
    bottom: 0;
    right: 0;
    width: 100%;
    z-index: 2;
    background: black;
    opacity: 0;
  }

</style>


  <div class="row">
          <h2> <% @users.each do |user| %></h2>
    <div class="col-xs-6 col-sm-4 col-md-3">
      <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), <%= image_tag user.picture_url %>
        <div class="card-username">
          <%= "#{user.username}, #{Date.today.year - user.birthdate.year}" %>
          <p>engage</p>
        </div>
        <%= image_tag user.picture_url %>
        <a class="card-link" href="#" ></a>
      </div>
    </div>
          <% end %>
  </div>

